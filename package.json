{
	"name": "statusbar-stock",
	"displayName": "statusbar股票行情",
	"description": "实时获取股票行情并显示在状态栏",
	"publisher": "lwch",
	"icon": "imgs/icon.png",
	"version": "0.0.2",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"股票",
		"行情",
		"stock"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [],
		"configuration": {
			"title": "statusbar股票插件",
			"properties": {
				"stock.stocks": {
					"type": "array",
					"default": [
						"sh000001",
						"sz399001"
					],
					"description": "股票代号"
				},
				"stock.interval": {
					"type": "number",
					"default": 1000,
					"description": "更新间隔"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.53.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	},
	"dependencies": {
		"iconv-lite": "^0.6.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lwch/vscode-stock.git"
	}
}
