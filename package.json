{
	"name": "statusbar-stock",
	"displayName": "statusbar股票行情",
	"description": "实时获取股票行情并显示在状态栏",
	"publisher": "lwch",
	"icon": "imgs/icon.png",
	"version": "0.2.2",
	"engines": {
		"vscode": "^1.53.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"股票",
		"行情",
		"stock"
	],
	"activationEvents": [
		"*"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [],
		"keybindings": [
			{
				"command": "extension.statusbar-stock.hide-all",
				"key": "ctrl+shift+h"
			},
			{
				"command": "extension.statusbar-stock.show-all",
				"key": "ctrl+shift+s"
			}
		],
		"configuration": {
			"title": "statusbar股票插件",
			"properties": {
				"stock.stocks": {
					"type": "array",
					"default": [
						"sh000001",
						"sz399001"
					],
					"description": "股票代号"
				},
				"stock.interval": {
					"type": "number",
					"default": 1000,
					"description": "更新间隔"
				},
				"stock.color.up": {
					"type": "string",
					"default": "red",
					"description": "上涨颜色"
				},
				"stock.color.down": {
					"type": "string",
					"default": "lawngreen",
					"description": "下跌颜色"
				}
			}
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "^17.0.10",
		"@types/vscode": "^1.53.0",
		"eslint": "^8.7.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.4",
		"typescript": "^4.5.5",
		"vscode-test": "^1.6.1",
		"iconv-lite": "^0.6.3"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lwch/vscode-stock.git"
	}
}
